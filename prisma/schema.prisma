// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Genre {
  id     Int     @id @unique
  name   String
  movies Movie[]
}

model Movie {
  id             String    @id @default(cuid())
  title          String
  guid           String    @unique
  slug           String?
  year           Int
  tagline        String?
  duration       Int
  audienceRating Float
  summary        String?
  poster         String
  genres         Genre[]
  libraries      Library[]
  viewCount      Int       @default(0)
}

model Library {
  id     String      @id @default(cuid())
  guid   String      @unique
  userId String
  user   User        @relation(fields: [userId], references: [id])
  title  String
  type   LibraryType
  key    String
  movies Movie[]
}

// Modèle utilisateur unifié avec Better-Auth
model User {
  id            String        @id @default(cuid())
  name          String
  email         String?       @unique  // Nullable pour les utilisateurs anonymes
  emailVerified Boolean       @default(false)
  image         String?
  isAnonymous   Boolean       @default(false)  // Requis par le plugin anonymous() de Better Auth
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  sessions      Session[]
  accounts      Account[]

  libraries     Library[]
  mediaSources  MediaSource[]
  
  // Game Relationships
  hostedSessions GameSession[] @relation("Host")
  gameParticipations GameSession[] @relation("GameParticipants")
  gameActions    GameAction[]

  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime
  updatedAt DateTime
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime

  @@map("account")
}

model Verification {
  id         String    @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?

  @@map("verification")
}

// --- GAME MODULE ---

model GameSession {
  id          String   @id @default(cuid())
  code        String   @unique // Short code (ABCD)
  hostId      String
  host        User     @relation("Host", fields: [hostId], references: [id])
  
  status      String   @default("WAITING") // WAITING, IN_PROGRESS, FINISHED
  movieIds    String[] // The Deck
  
  participants User[]  @relation("GameParticipants")
  actions      GameAction[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  expiresAt   DateTime? // Session expires after this time (default: 24h from creation)
  
  @@map("game_session")
}

model GameAction {
  id            String      @id @default(cuid())
  sessionId     String
  session       GameSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  
  userId        String
  user          User        @relation(fields: [userId], references: [id])
  
  type          String      // SWIPE, VOTE_BRACKET, BID, VETO
  payload       Json        // { liked: true, movieId: "..." }
  
  createdAt     DateTime    @default(now())
  
  @@map("game_action")
}

model MediaSource {
  id          String      @id @default(cuid())
  
  userId      String
  user        User        @relation(fields: [userId], references: [id])
  
  type        MediaCenter
  url         String
  credentials Json        // Stocke token, secret, movieSectionId, etc. de manière flexible
  
  isActive    Boolean     @default(true)
  
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

enum MediaCenter {
  PLEX
  JELLYFIN
  EMBY
}

enum LibraryType {
  MOVIE
  TV_SHOW
}
