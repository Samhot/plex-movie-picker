// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Genre {
  id     Int     @id @unique
  name   String
  movies Movie[]
}

model Movie {
  id             String    @id @default(cuid())
  title          String
  guid           String    @unique
  slug           String?
  year           Int
  tagline        String?
  duration       Int
  audienceRating Float
  summary        String?
  poster         String
  genres         Genre[]
  swipes         Swipe[]
  matches        Match[]
  libraries      Library[]
  viewCount      Int       @default(0)
}

model Library {
  id     String      @id @default(cuid())
  guid   String      @unique
  userId String
  user   User        @relation(fields: [userId], references: [id])
  title  String
  type   LibraryType
  key    String
  movies Movie[]
}

model User {
  id           String        @id @default(cuid())
  name         String
  libraries    Library[]
  sessions     Session[]
  swipes       Swipe[]
  matches      Match[]
  mediaSources MediaSource[]
}

model Session {
  id        String    @id @default(cuid())
  users     User[]
  swipes    Swipe[]
  startedAt DateTime  @default(now())
  endedAt   DateTime?
  matches   Match[]
}

model Swipe {
  id        String   @id @default(cuid())
  sessionId String
  session   Session  @relation(fields: [sessionId], references: [id])
  movieId   String
  movie     Movie    @relation(fields: [movieId], references: [id])
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  liked     Boolean
  createdAt DateTime @default(now())
}

model Match {
  id        String   @id @default(cuid())
  sessionId String
  session   Session  @relation(fields: [sessionId], references: [id])
  users     User[]
  movieId   String
  movie     Movie    @relation(fields: [movieId], references: [id])
  createdAt DateTime @default(now())
}

model MediaSource {
  id          String      @id @default(cuid())
  
  userId      String
  user        User        @relation(fields: [userId], references: [id])
  
  type        MediaCenter
  url         String
  credentials Json        // Stocke token, secret, movieSectionId, etc. de mani√®re flexible
  
  isActive    Boolean     @default(true)
  
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

enum MediaCenter {
  PLEX
  JELLYFIN
  EMBY
}

enum LibraryType {
  MOVIE
  TV_SHOW
}
